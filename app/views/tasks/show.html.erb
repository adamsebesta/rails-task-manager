<div class="container">
  <div class="text-center m-5">

    <h3><%= @task.title %></h3>
    <p><%= @task.details %></p>
    <p>Completion: <%= @task.completed == true ? "✔️" : "❌" %></p>
    <%= link_to "back to list", tasks_path, :class => "btn btn-primary" %>
    <%= link_to "edit", edit_path, :class => "btn btn-primary"  %>
    <%= link_to "Delete",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" }, :class => "btn btn-primary" %>
  </div>
</div>
